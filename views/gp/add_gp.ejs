<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../gnb.css">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

    <title>Document</title>
    <style>
        form {
            box-sizing: border-box;
            padding-top: 10vw;
            padding-left: 5vw;
            /* width: 100%; */
            height: 100%;
        }

        #lnb {
            position: fixed;
            right: 5vw;
            bottom: 5vw;
        }

        button {

            color: white;
            border: none;
            /* border: 1px solid orange; */
            border-radius: 1.5vw;
            font-size: 3.5vw;
            background: rgb(99, 99, 99);
            ;
            padding: 1.8vw;

        }

        table {
            /* width: 0vw; */
            table-layout: fixed;
            height: 80%;
        }

        input,
        textarea {
            padding: 1vw;
            line-height: 4vw;
            border: none;
            width: 50vw;
            /* border: 1px solid;
             */
            border-radius: 3px;
            background-color: #eceadd;
        }

        label {
            display: inline-block;
            /* padding: 1vw; */
            /* color: #999; */
            font-size: 3.5vw;
            width: 10vw;
            text-align: center;
            line-height: normal;
            vertical-align: middle;
            background-color: #eceadd;
            cursor: pointer;
            line-height: 4vw;
            padding: 1vw;
            /* border: 1px solid #ebebeb; */
            /* border-bottom-color: #e2e2e2; */
            border-radius: 1px;
        }

        input[type="file"] {
            /* position: absolute; */
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            border: 0;


        }

        .upload-name {
            display: inline-block;
            /* padding: 1vw; */
            margin-bottom: 2vw;
            /* color: #999; */
            /* font-size: 3.5vw; */
            width: 38vw;
            line-height: 4vw;

            overflow: hidden;
        }

        tr {
            height: 10vw;
            /* margin-top: 8vw; */

        }

        td {

            /* vertical-align: center; */
            height: 8vw;
        }

        .td1 {
            width: 18vw;

        }

        #picture {
            max-height: 40vw;
        }

        /* .td2 {
            width: 15vw;
        } */
    </style>
    <script>
        $(document).ready(function () {
            $('#gnb img').eq(1).addClass('on')

            var fileTarget = $('.upload-hidden');
            fileTarget.on('change', function () {
                // 값이 변경되면 
                readURL(this)

                if (window.FileReader) { // modern browser 
                    var filename = $(this)[0].files[0].name;
                }
                else { // old IE 
                    var filename = $(this).val().split('/').pop().split('\\').pop(); // 파일명만 추출 
                } // 추출한 파일명 삽입 
                $(this).siblings('.upload-name').val(filename);

             
            });
        })
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader()

                    reader.onload = function (e) {
                        $('#picture').attr('src', e.target.result)
                    }
                    reader.readAsDataURL(input.files[0])
                }
            }

    </script>
</head>

<body>
    <nav id='gnb'>
        <li>
            <a href="/"><img src="../img/home.png" width="30vw" alt=""></a>
        </li>
        <li>
