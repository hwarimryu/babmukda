                    <td class="td2"><input name="maxnum" type="text"></td>
                </tr>

                <tr>
                    <td class="td1" style="vertical-align:top">picture</td>
                    <td colspan="2" class="td2">
                        <input class="upload-name" value="파일선택" disabled="disabled">

                        <label for="ex_file">FIND</label>
                        <input type="file" name="image" accept="image/*" id="ex_file"
                            class="upload-hidden" multiple="">
                        <img src="/public/img/no_image.png" id="picture" alt="" class="upload-image"></td>
                </tr>
                <tr>
                    <td class="td1" style="vertical-align:top">detail</td>
                    <td class="td2"><textarea cols="28" rows="8"></textarea>
                </tr>
            </table>
            <nav id="lnb">
                <button type="reset">
                    RESET
                </button>
                <button type="submit">
                    OK
                </button>
                <button type="button" onclick="location.href='/servicegp'">
                    QUIT
                </button>


            </nav>





        </form>


    </article>
</body>

</html>